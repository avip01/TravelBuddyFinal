# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/travelbuddy?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Firebase Admin SDK
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="travelbuddy-media"

# Third-party APIs
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
FLIGHTAWARE_API_KEY="your-flightaware-api-key"
MARINETRAFFIC_API_KEY="your-marinetraffic-api-key"

# Email Service (optional)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@travelbuddy.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS="http://localhost:19006,http://localhost:3000,exp://localhost:19000"

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# Development flags
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
LOG_LEVEL="debug" 